<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= gravatar_for chat_message.member %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= chat_message.member.name %> at <%= chat_message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>
<%= stylesheet_link_tag 'ahoy', media: 'all', 'data-turbolinks-track': 'reload'  %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<%= form_for :article, url: '/add-article', html: { multipart: true } do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :PDF %>
		<%= f.file_field :file_path, class: 'form-control' %>
	</div>

	<div class="form-group">
	    <%= f.submit 'Upload PDF', class: 'btn btn-default' %>
	</div>
<% end %>

<form action="/add-article" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	Title <input type="text" name="title">
	PDF <input type="file" name="file">
	<input type="submit" name="submit" value="Submit">
</form>

<%= @text %>